<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>


{{#if postagens.length}}
    {{#each postagens}}
        <div class="card">
            <div class="card-body">
                <h4>{{titulo}}</h4>
                <p>{{descricao}}</p>
                <small>{{data}}</small>
                <small>{{categoria}}</small>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Não há postagens disponíveis.</p>
{{/if}}
